<Window x:Class="WpfApp_feleves.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_feleves"
        
        xmlns:converters="clr-namespace:WpfApp_feleves.Converters" 
        
        mc:Ignorable="d"
        Title="Társasjáték-kezelő" Height="600" Width="800">

    <Window.Resources>
        <CollectionViewSource x:Key="RaktaronNezet" Filter="Raktaron_Filter" />

        <CollectionViewSource x:Key="KolcsonzottNezet" Filter="Kolcsonzott_Filter">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Kolcsonvevo" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <converters:GameTypeToColorConverter x:Key="GameTypeToColorConverter" />

        <Style x:Key="TipusSzerintiSorStilus" TargetType="DataGridRow">
            <Setter Property="Background" 
                    Value="{Binding Tipus, Converter={StaticResource GameTypeToColorConverter}}" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Margin="10,10,10,0">

            <TabItem Header="Játékok Listája" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Szűrés (név, típus, játékosszám):" VerticalAlignment="Center" />
                        <TextBox x:Name="txtKereses" Width="300" VerticalAlignment="Center"
                                 TextChanged="txtKereses_TextChanged" />
                    </StackPanel>

                    <DockPanel Grid.Row="1">
                        <TextBlock Text="Raktáron lévő játékok" DockPanel.Dock="Top" 
                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,5" />
                        <DataGrid x:Name="raktaronGrid"
                                  ItemsSource="{Binding Source={StaticResource RaktaronNezet}}"
                                  RowStyle="{StaticResource TipusSzerintiSorStilus}"
                                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Név" Binding="{Binding Nev}" Width="*" />
                                <DataGridTextColumn Header="Típus" Binding="{Binding Tipus}" Width="150" />
                                <DataGridTextColumn Header="Játékosszám" Binding="{Binding JatekosSzam}" Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>

                    <DockPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="Kölcsönadott játékok" DockPanel.Dock="Top" 
                                   FontSize="16" FontWeight="Bold" Margin="0,0,0,5" />
                        <DataGrid x:Name="kolcsonzottGrid"
                                  ItemsSource="{Binding Source={StaticResource KolcsonzottNezet}}"
                                  RowStyle="{StaticResource TipusSzerintiSorStilus}"
                                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">

                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock FontWeight="Bold" FontSize="14">
                                                    <Run Text="Kölcsönvevő: "/>
                                                    <Run Text="{Binding Name}"/> 
                                                    <Run Text=" ("/>
                                                    <Run Text="{Binding ItemCount}"/>
                                                    <Run Text=" db)"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True">
                                                            <Expander.Header>
                                                                <ContentPresenter Content="{TemplateBinding Content}" />
                                                            </Expander.Header>
                                                            <ItemsPresenter Margin="20,0,0,0" />
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Név" Binding="{Binding Nev}" Width="*" />
                                <DataGridTextColumn Header="Kölcsönvevő" Binding="{Binding Kolcsonvevo}" Width="200" />
                                <DataGridTextColumn Header="Státusz" Binding="{Binding Status}" Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button x:Name="btnHozzaad" Content="Új játék hozzáadása" Margin="5" Padding="10,5" Click="Hozzaad_Click" />
                        <Button x:Name="btnSzerkeszt" Content="Szerkesztés" Margin="5" Padding="10,5" Click="Szerkeszt_Click" />
                        <Button x:Name="btnTorles" Content="Törlés" Margin="5" Padding="10,5" Click="Torles_Click" Background="#FFE0E0" />
                        <Button x:Name="btnKolcsonzes" Content="Kölcsönzés" Margin="5" Padding="10,5" Click="Kolcsonzes_Click" />
                        <Button x:Name="btnVisszahoz" Content="Visszahozás" Margin="5" Padding="10,5" Click="Visszahoz_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Statisztika 📊" FontWeight="Bold">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Játék Statisztikák" FontSize="18" FontWeight="SemiBold" Margin="5"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="lblStatisztika" Text="Kattintson a frissítésre az adatok megjelenítéséhez..." TextWrapping="Wrap" FontSize="14" Margin="0,10,0,10"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Statisztika Frissítése" Margin="5" Padding="10,5" Click="Frissit_Statisztika_Click" HorizontalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>